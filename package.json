{
  "name": "frevi",
  "version": "0.1.0",
  "private": true,
  "main": "../Frevi-firebase9/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build",
    "start-static": "serve out",
    "deploy": "next build && firebase deploy --only hosting",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-pack": "npm run build && electron-builder --dir",
    "electron-dist": "npm run build && electron-builder",
    "build-exe": "npm run export && electron-builder"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@firebase/firestore": "^4.9.0",
    "@next-auth/mongodb-adapter": "^1.1.3",
    "axios": "^1.10.0",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "firebase-tools": "^14.11.0",
    "framer-motion": "^7.10.3",
    "mongoose": "^8.16.4",
    "next": "^15.4.1",
    "next-auth": "^4.24.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.12.0",
    "react-loader-spinner": "^5.3.3",
    "socket.io-client": "^4.8.1",
    "tailwind-scrollbar-hide": "^1.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "dotenv": "^17.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.23.0",
    "eslint-config-next": "12.2.5",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8"
  },
  "build": {
    "appId": "com.frevi.app",
    "productName": "Frevi",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
